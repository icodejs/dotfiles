{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    "indent": [2, 4],
    "curly": 0,
    "eqeqeq": [2, "smart"],
    "no-unused-vars": [2],
    "no-use-before-define": [1],
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "eol-last": [0],
    "camelcase": [1],
    "semi": [2, "always"],
    "space-infix-ops": 2,
    "consistent-return": [0],
    "no-underscore-dangle": [0],
    "no-mixed-requires": [0],
    "space-after-keywords": [2, "always"],
    "space-unary-ops": [0, {
      "words": true,
      "nonwords": false
    }],
    // "no-shadow": "functions",
    "react/display-name": [0],
    "react/jsx-boolean-value": [1],
    "react/jsx-no-undef": [1],
    "jsx-quotes": [1],
    "react/jsx-sort-prop-types": [1],
    "react/jsx-sort-props": [1],
    "react/jsx-uses-react": [1],
    "react/jsx-uses-vars": [1],
    "react/no-did-mount-set-state": [1],
    "react/no-did-update-set-state": [1],
    "react/no-multi-comp": [1],
    "react/no-unknown-property": [1],
    "react/prop-types": [0],
    "react/react-in-jsx-scope": [1],
    "react/require-extension": [1],
    "react/self-closing-comp": [1],
    "react/sort-comp": [1, {
      "order": [
        "lifecycle",
        "everything-else",
        "render"
      ],
      "groups": {
        "lifecycle": [
          "displayName",
          "propTypes",
          "contextTypes",
          "childContextTypes",
          "statics",
          "defaultProps",
          "constructor",
          "getDefaultProps",
          "getInitialState",
          "getChildContext",
          "componentWillMount",
          "componentDidMount",
          "componentWillReceiveProps",
          "shouldComponentUpdate",
          "componentWillUpdate",
          "componentDidUpdate",
          "componentWillUnmount"
        ]
      }
    }],
    "react/wrap-multilines": [1]
  },
  "globals": {
    "expect": true,
    "require": true,
    "define": true,
    "module": true,
    "beforeEach": true,
    "afterEach": true,
    "describe": true,
    "it": true,
    "done": true,
    "_gaq": true,
    "jest": true,
    "pit": true,
    "xdescribe": true,
    "xit": true
  }
}